<form method="get" action="/quizes">
	<p>Desea buscar alguna pregunta:</p>
	<p>
		<input type="text" name="search" placeholder="Texto a buscar" autofocus>
		<input type="submit" value="Buscar">
	</p>
</form>
<table>
	<tr class="rem">
		<th>ID</th>
		<th>Tema</th>
		<th>Pregunta</th>
		<th colspan="2">Opciones</th>
	</tr>
	<% for (var i=0; i < quizes.length; i++) { %>
	<tr>
		<td class="rem"><%= quizes[i].id %> - </td>
		<td class="rem"><%= quizes[i].tema %></td>
		<td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
		<td><a href="quizes/<%= quizes[i].id %>/edit"><button type="button">Editar</button></a></td>
		<td>
			<form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
				<button type="submit" onclick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
					Borrar
				</button>
			</form>
		</td>
	</tr>
	<% } %>
</table>
<p><a href="/quizes/new"><button type="button">Cear pregunta</button></a></p>
